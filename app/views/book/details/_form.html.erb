<%= form_with(model: detail, url: book_detail_path(detail.book, detail)) do |form| %>
  <div class="row">
    <div class="col-12">
      <% if detail.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(detail.errors.count, "error") %> prohibited this detail from being saved:</h2>

          <ul>
            <% detail.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6 mb-1">
      <div class="form-floating">
        <%= form.select :name, Book::DetailPresenter.name_options, {}, class: "form-select", disabled: readonly %>
        <%= form.label :name %>
      </div>
    </div>
    <div class="col-sm-12 col-md-6 mb-1">
      <div class="form-floating">
        <%= form.text_field :description, class: "form-control", readonly: readonly %>
        <%= form.label :description %>
      </div>
    </div>
  </div>
  <% unless readonly %>
    <div class="row">
      <div class="col-12">
        <%= form.submit 'Save', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>

