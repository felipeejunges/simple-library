<%= render "shared/menu" %>
<div class="col-sm p-3 min-vh-100">
  <%= render 'shared/notices' %>
  <div class="row mb-1">
    <div class="col-12">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 border-bottom">
        <h1 class="h2">New detail</h1>
        <div class="btn-toolbar mb-2 mb-md-0 mx-2">
          <%= link_to book_path(@detail.book), class: "btn btn-sm btn-outline-secondary" do %>
            <i class="bi bi-arrow-return-left"></i> Back to Book
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= render "form", detail: @detail, readonly: false %>
</div>